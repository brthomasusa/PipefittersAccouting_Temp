@page "/HumanResources/Pages/TimeCards"
@using PipefittersAccounting.SharedModel.Readmodels.HumanResources

<PageTitle>TimeCards</PageTitle>
<Heading Size="HeadingSize.Is2" Margin="Margin.Is3.FromStart">TimeCards</Heading>

<Row>
    <Column>
        <Card Margin="Margin.Is4.OnY">
            <CardHeader>
                <CardTitle>TimeCard Payment Information</CardTitle>
            </CardHeader>
            <CardBody>
                <DataGrid TItem="PayrollRegister" Data="inMemoryData" ShowPager ShowPageSizes>
                    <DataGridColumns>

                        <DataGridColumn TItem="PayrollRegister" Field="@nameof( PayrollRegister.EmployeeName )"
                            Caption="Name" />

                        <DataGridColumn TItem="PayrollRegister" Field="@nameof( PayrollRegister.RegularPay )"
                            Caption="Regular" />

                        <DataGridColumn TItem="PayrollRegister" Field="@nameof( PayrollRegister.OvertimePay )"
                            Caption="Overtime" />

                        <DataGridColumn TItem="PayrollRegister" Field="@nameof( PayrollRegister.GrossPay )"
                            Caption="Gross" />

                        <DataGridColumn TItem="PayrollRegister" Field="@nameof( PayrollRegister.FICA )"
                            Caption="FICA" />

                        <DataGridDateColumn TItem="PayrollRegister" Field="@nameof( PayrollRegister.Medicare )"
                            Caption="FICA" />

                        <DataGridNumericColumn TItem="PayrollRegister"
                            Field="@nameof( PayrollRegister.FederalWithholding )" Caption="FWT" />

                        <DataGridColumn TItem="PayrollRegister" Field="@nameof( PayrollRegister.NetPay )" Caption="Net"
                            DisplayFormat="{0:C}"
                            DisplayFormatProvider="@System.Globalization.CultureInfo.GetCultureInfo("en-US")"
                            TextAlignment="TextAlignment.End">
                        </DataGridColumn>

                    </DataGridColumns>
                </DataGrid>
            </CardBody>
        </Card>
    </Column>
</Row>