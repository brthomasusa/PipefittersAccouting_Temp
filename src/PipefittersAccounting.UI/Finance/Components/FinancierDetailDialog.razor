<ErrorBoundary>
    @if (@Financier is not null)
    {
        <Modal @ref="@_detailModalRef">
            <ModalContent Centered="true" Size="ModalSize.Large">
                <ModalHeader>
                    <ModalTitle>Financier Details</ModalTitle>
                    <CloseButton Clicked="@CloseDialog" />
                </ModalHeader>
                <ModalBody>
                    <ReadOnlyDetailsForm FormTitle=@Financier!.FinancierName ViewModel=@Financier>
                        <FormFields>
                            <Field>
                                <FieldLabel>Telephone</FieldLabel>
                                <TextEdit Text=@Financier!.Telephone ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Address Line1</FieldLabel>
                                <TextEdit Text=@Financier!.AddressLine1 ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Address Line2</FieldLabel>
                                <TextEdit Text=@Financier!.AddressLine2 ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>City</FieldLabel>
                                <TextEdit Text=@Financier!.City ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>State</FieldLabel>
                                <TextEdit Text=@Financier!.StateCode ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Zipcode</FieldLabel>
                                <TextEdit Text=@Financier!.Zipcode ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Contact Name</FieldLabel>
                                <TextEdit Text=@Financier!.ContactFullName ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Contact Telephone</FieldLabel>
                                <TextEdit Text=@Financier!.ContactTelephone ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Status</FieldLabel>
                                <TextEdit Text=@(ConvertIsActiveToString()) ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Created On</FieldLabel>
                                <TextEdit Text=@(Financier!.CreatedDate.ToShortDateString()) ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Last Modified On</FieldLabel>
                                <TextEdit Text=@(Financier!.LastModifiedDate.ToShortDateString()) ReadOnly />
                            </Field>
                        </FormFields>
                    </ReadOnlyDetailsForm>
                </ModalBody>
                <ModalFooter>
                    <Button id="footer-close-btn" Color="Color.Secondary" Clicked="@CloseDialog">Close</Button>
                </ModalFooter>
            </ModalContent>
        </Modal>
    }
    </ErrorBoundary>