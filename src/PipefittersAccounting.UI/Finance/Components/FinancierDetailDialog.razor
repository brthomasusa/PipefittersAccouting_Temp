<ErrorBoundary>
    @if (@_financier is not null)
    {
        <Modal @ref="@_detailModalRef">
            <ModalContent Centered="true" Size="ModalSize.Large">
                <ModalHeader>
                    <ModalTitle>Financier Details</ModalTitle>
                    <CloseButton Clicked="@CloseDialog" />
                </ModalHeader>
                <ModalBody>
                    <ReadOnlyDetailsForm FormTitle=@_financier!.FinancierName ViewModel=@_financier>
                        <FormFields>
                            <Field>
                                <FieldLabel>Telephone</FieldLabel>
                                <TextEdit Text=@_financier!.Telephone ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Address Line1</FieldLabel>
                                <TextEdit Text=@_financier!.AddressLine1 ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Address Line2</FieldLabel>
                                <TextEdit Text=@_financier!.AddressLine2 ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>City</FieldLabel>
                                <TextEdit Text=@_financier!.City ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>State</FieldLabel>
                                <TextEdit Text=@_financier!.StateCode ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Zipcode</FieldLabel>
                                <TextEdit Text=@_financier!.Zipcode ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Contact Name</FieldLabel>
                                <TextEdit Text=@_financier!.ContactFullName ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Contact Telephone</FieldLabel>
                                <TextEdit Text=@_financier!.ContactTelephone ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Status</FieldLabel>
                                <TextEdit Text=@(ConvertIsActiveToString()) ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Created On</FieldLabel>
                                <TextEdit Text=@(_financier!.CreatedDate.ToShortDateString()) ReadOnly />
                            </Field>
                            <Field>
                                <FieldLabel>Last Modified On</FieldLabel>
                                <TextEdit Text=@(_financier!.LastModifiedDate.ToShortDateString()) ReadOnly />
                            </Field>
                        </FormFields>
                    </ReadOnlyDetailsForm>
                </ModalBody>
                <ModalFooter>
                    <Button id="footer-close-btn" Color="Color.Secondary" Clicked="@CloseDialog">Close</Button>
                </ModalFooter>
            </ModalContent>
        </Modal>
    }
    </ErrorBoundary>