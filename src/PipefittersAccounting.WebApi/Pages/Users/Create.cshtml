@page
@model PipefittersAccounting.WebApi.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Create a new accounting application login";
}

<h6 class="bg-primary text-white p-2">@ViewData["Title"]</h6>

<form asp-page="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input name="Id" type="hidden" value="@Model.DomainUser.Id" />
    </div>
    <div class="form-group">
        <label>User Name</label>
        <input name="UserName" class="form-control" value="@Model.DomainUser.UserName" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input name="Email" class="form-control" value="@Model.DomainUser.Email" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" name="Password" class="form-control" value="@Model.DomainUser.Password" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-secondary" asp-page="List">Back</a>
</form>
